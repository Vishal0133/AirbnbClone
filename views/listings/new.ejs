<% layout('/layouts/boilerplate') -%>
   

    <div class="row">
        <div class="col-8 offset-2">
            <h1>Create a New Lisitng</h1>
            <br>
    <form method="POST" action="/listings" class=" needs-validation" novalidate enctype="multipart/form-data">
    <div class="mb-2">
     <label for="title" class="form-label" >Title</label>
     <input name="listing[title]" type="text" class="form-control" id="title" placeholder="title"  required>
     <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    
  

   <div class="mb-2">
    <label for="description" class="form-label">Description</label>
     <textarea  name="listing[description]" type="text" id="description"  class="form-control" required></textarea>
     <div class="invalid-feedback">
       Description should be valid
      </div>
    </div>

    <div class="mb-2">
        <label for="url" class="form-label">Upload Listing Image</label>
     <input name="listing[image]" class="form-control"  type="file" id="url" placeholder="image url/link" required >
    </div>

    <div class="row">
    <div class="mb-2 col-md-4" >
        <label for="price" class="form-label">Price</label>
     <input name="listing[price]"  id="price" class="form-control" placeholder="price" required >
     <div class="invalid-feedback">
        Price should be valid
       </div>
    </div>

    <div class="mb-2 col-md-8">
        <label for="country" class="form-label">Country</label>
     <input name="listing[country]" class="form-control" id="country" type="text" placeholder="country" required>
     <div class="invalid-feedback">
        Country name should be valid
       </div>
    </div>
   </div>
    <div class=",mb-2">
        <label for="location" class="form-label">Location</label>
     <input name="listing[location]" id="location" class="form-control" type="text" placeholder="location" required >
     <div class="invalid-feedback">
        Location should be valid
       </div>
     </div>
     <br>
     <button class="btn btn-dark add-btn">Add</button>
    </form>
    <br>
</div>
</div>


